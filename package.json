{
  "name": "homeoffice-backend",
  "version": "1.0.0",
  "description": "Sistema de control y gesti√≥n para home office",
  "main": "index.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon src/server.ts",
    "build": "tsc",
    "migrate": "sequelize-cli db:migrate",
    "migrate:undo": "sequelize-cli db:migrate:undo",
    "seed": "sequelize-cli db:seed:all",
    "format": "prettier --write src/**/*.ts",
    "test:flow": "node tests/flow-test.js",
    "test:quick": "node tests/simple-test.js",
    "test:states": "node tests/states-only.js",
    "test:admin": "node tests/admin-test.js",
    "test:admin:quick": "node tests/simple-admin-test.js",
    "test:all": "npm run test:quick && npm run test:admin:quick",
    "test:complete": "npm run test:flow && npm run test:admin",
    "test:production": "node tests/production-ready.js",
    "validate": "npm run test:production"
  },
  "keywords": [
    "homeoffice",
    "productivity",
    "employee-monitoring",
    "nodejs",
    "typescript"
  ],
  "author": "Sistema Home Office",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "axios": "^1.11.0",
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "googleapis": "^157.0.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.5",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "rate-limiter-flexible": "^7.2.0",
    "sequelize": "^6.37.7",
    "socket.io": "^4.8.1",
    "typescript": "^5.9.2",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.3.0",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^7.0.1",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "sequelize-cli": "^6.6.3",
    "ts-node": "^10.9.2"
  }
}
